{% trans_default_domain 'FOSUserBundle' %}
<div class="container-fluid login-container">
    <div class="jumbotron login-jbt col-md-3">
        <div class="text-center">
            <h2>JWT xample</h2>
        </div>
        {% if error %}
        <div class="alert alert-danger alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
            </button>
            <p>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </p>
        </div>
        {% endif %}
        <form action="{{ path("fos_user_security_check") }}" method="post">
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}

            <div class="form-group">
                <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-user fa" aria-hidden="true"></i>
                    </span>
                    <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" placeholder="Username" />
                </div>
            </div>

            <div class="form-group">
                <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
                <div class="input-group">
                    <div class="input-group-addon">
                        <i class="fa fa-lock fa-lg" aria-hidden="true"></i>
                    </div>
                    <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" placeholder="Password" />
                </div>
            </div>                        

            <div class="checkbox">
                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" /> {{ 'security.login.remember_me'|trans }}
                </label>
            </div>

            <input class="btn btn-primary btn-block" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </form>
    </div>
</div>